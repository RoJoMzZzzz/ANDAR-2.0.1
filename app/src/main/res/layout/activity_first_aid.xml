<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/b1"
    tools:context="com.andarpoblacion.andrade.andar.FirstAidActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:stretchColumns="*"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <Button
                android:id="@+id/btnBurns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="BURNS"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnCpr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="CPR"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnCuts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="CUTS AND SCRAPES"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnDislocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="DISLOCATION"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnElectrical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="ELECTRICAL SHOCK"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnFracture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="FRACTURES"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnHeartAttack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="HEART ATTACK"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnHeatStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="HEATSTROKE"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnPuncture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="PUNCTURE WOUNDS"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnSevereBleeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="SEVERE BLEEDING"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnSpinalInjury"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="SPINAL INJURY"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnSprain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="SPRAIN"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/btnStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel"
                android:text="STROKE"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:padding="5dp"
                />
            
        </LinearLayout>

    </ScrollView>

</LinearLayout>