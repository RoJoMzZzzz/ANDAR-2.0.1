<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff"
    android:layout_margin="10dp">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtReceiver"
        android:layout_margin="10dp"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReceiver"
        android:layout_alignLeft="@+id/txtReceiver"
        android:layout_alignStart="@+id/txtReceiver"
        android:id="@+id/txtBody"
        android:layout_margin="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtReceiver"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtDay"
        android:layout_margin="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTime"
        android:layout_alignBaseline="@+id/txtBody"
        android:layout_alignBottom="@+id/txtBody"
        android:layout_alignLeft="@+id/txtDay"
        android:layout_alignStart="@+id/txtDay"
        android:layout_marginBottom="10dp" />
</RelativeLayout>