<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_references"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1"
    tools:context="com.andarpoblacion.andrade.andar.References">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:text="First Aid PH App"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <TextView
                android:text="It is the first in the Philippines in helping to save lives. Volunteers + Logistics + Information Technology = Philippine Red Cross that is Always first, Always Ready, Always There. The Application gives you instant access to pertinent needed to handle common first aid emergencies."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="https://play.google.com/store/apps/details?id=com.cube.gdpc.phl&amp;hl=en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtFirstAidApp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:autoLink="web"
                android:clickable="true"
                android:linksClickable="true" />

            <TextView
                android:text="NDRRMC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="NDRRMC serves as the President’s adviser on disaster preparedness programs, disaster operations and rehabilitation efforts undertaken by the government and the private sector. It acts as the top coordinator of all disaster management and the highest allocator of resources in the Philippines. The NDRRMC was formerly known as the National Disaster Coordinating Council (NDCC)."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="http://www.ndrrmc.gov.ph/"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNdrrmcRes"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:autoLink="web"
                android:clickable="true"
                android:linksClickable="true" />

            <TextView
                android:text="Github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="We’re supporting a community where more than 20 million people learn, share, and work together to build software. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textVie"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="https://github.com/"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtGithubRes"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:autoLink="web"
                android:clickable="true"
                android:linksClickable="true" />

            <TextView
                android:text="Stack Overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="Stack Overflow is the largest online community for programmers to learn, share their knowledge, and advance their careers."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtStackOverFlowDesc"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtStackOverFlowRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:autoLink="web"
                android:clickable="true"
                android:linksClickable="true"
                android:text="http://stackoverflow.com/" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
