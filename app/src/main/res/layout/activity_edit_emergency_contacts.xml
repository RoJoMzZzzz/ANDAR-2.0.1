<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_emergency_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1"
    tools:context="com.andarpoblacion.andrade.andar.EditEmergencyContacts">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="Display Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtDisplayName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtDisplayName"
        android:layout_alignLeft="@+id/txtDisplayName"
        android:layout_alignStart="@+id/txtDisplayName"
        android:layout_marginTop="15dp"
        android:id="@+id/edtDispName"
        android:hint="Input Display Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/edt_back"
        android:padding="8dp" />

    <TextView
        android:text="Contact Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtDispName"
        android:layout_alignLeft="@+id/edtDispName"
        android:layout_alignStart="@+id/edtDispName"
        android:layout_marginTop="15dp"
        android:id="@+id/textView7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="15dp"
        android:id="@+id/edtContNum"
        android:hint="Input Contact Number"
        android:layout_alignRight="@+id/edtDispName"
        android:layout_alignEnd="@+id/edtDispName"
        android:background="@drawable/edt_back"
        android:padding="8dp" />

    <Button
        android:text="CANCEL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDelCont"
        android:layout_alignLeft="@+id/btnDelCont"
        android:layout_alignStart="@+id/btnDelCont"
        android:layout_marginTop="20dp"
        android:id="@+id/btnCancelCont"
        android:layout_alignRight="@+id/btnDelCont"
        android:layout_alignEnd="@+id/btnDelCont"
        android:layout_marginBottom="50dp"/>

    <Button
        android:text="SAVE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/btnSaveCont"
        android:layout_below="@+id/edtContNum"
        android:layout_alignLeft="@+id/edtContNum"
        android:layout_alignStart="@+id/edtContNum"
        android:layout_marginRight="10dp" />

    <Button
        android:text="DELETE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnDelCont"
        android:layout_below="@+id/btnSaveCont"
        android:layout_alignLeft="@+id/btnSaveCont"
        android:layout_alignStart="@+id/btnSaveCont"
        android:layout_alignRight="@+id/btnSaveCont"
        android:layout_alignEnd="@+id/btnSaveCont" />

</RelativeLayout>
